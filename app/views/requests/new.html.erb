<%= form_for @request do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
     <h2><%= pluralize(@request.errors.count, "error") %> prohibited this feedback from being saved:</h2>
     <ul>
     <% @request.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
     </ul>
   </div>
 <% end %>

  <div class="field">
    <%= f.label :id, 'Goodreads id' %>
    <%= f.text_field :id %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
  </div>
  <div class="actions">
   <%= f.submit :send %>
 </div>
<% end %>